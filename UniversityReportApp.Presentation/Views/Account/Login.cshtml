@model LoginModel

<h2>Login</h2>

<form method="post">
    <div>
        <label for="Email">Email</label>
        <input id="Email" type="email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label for="Password">Password</label>
        <input id="Password" type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input id="RememberMe" type="checkbox" asp-for="RememberMe" />
        <label for="RememberMe">Remember me?</label>
    </div>
    <button type="submit">Login</button>
</form>
